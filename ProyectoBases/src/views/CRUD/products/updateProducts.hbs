<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Update a product
            </div>
            <div class="card-body">
                <h5>Fill only the inputs of the aspects of the product you wish to change.</h5>
                <form action="/uploadUpdateProduct" method="POST" enctype="multipart/form-data">
                    <input type="hidden" name="productIdSelected" value={{idProductSelected}}>
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Product name" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <select name="idProductType" class="form-control" id="id_Store">
                            <option value="">Maintain value</option>
                            {{#each productTypeResult}}
                            <option value={{id_ProductType}}>{{name_ProductType}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <select name="idDistillery" class="form-control" id="id_Store">
                            <option value="">Maintain value</option>
                            {{#each distilleryResult}}
                            <option value={{id_Distillery}}>{{name_Distillery}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <select name="idContainer" class="form-control" id="id_Store">
                            <option value="">Maintain value</option>
                            {{#each containerResult}}
                            <option value={{id_Container}}>{{description_Container}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <h6>Product exclusivity:</h6>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exclusiveRadio" id="flexRadioDefault1"
                            value=0>
                        <label class="form-check-label" for="flexRadioDefault1">
                            Public
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exclusiveRadio" id="flexRadioDefault2"
                            value=1>
                        <label class="form-check-label" for="flexRadioDefault2">
                            Exclusive
                        </label>
                    </div>
                    <br>
                    <h6>Do you wish to deactivate the product? It will no longer be up for purchase</h6>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="activeRadio" id="flexRadioDefault1" value=1>
                        <label class="form-check-label" for="flexRadioDefault1">
                            Activate
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="activeRadio" id="flexRadioDefault2" value=0>
                        <label class="form-check-label" for="flexRadioDefault2">
                            Delete
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="number" min="0" name="price" class="form-control"
                            onkeypress="return onlyNumberKey(event)" aria-describedby="basic-addon2"
                            placeholder="Price (in dollars)">
                    </div>
                    <div class="form-group">
                        <input type="number" min="0" name="age" class="form-control"
                            onkeypress="return onlyNumberKey(event)" aria-describedby="basic-addon2"
                            placeholder="Age (in years)">
                    </div>
                    <div class="form-group">
                        <input type="file" name="image">
                    </div>

                    <button type="submit" class="btn btn-primary">Update</button>


                </form>
            </div>
        </div>
    </div>
    <script>
        function onlyNumberKey(evt) {
            // Only ASCII character in that range allowed
            var ASCIICode = (evt.which) ? evt.which : evt.keyCode
            if (ASCIICode > 31 && (ASCIICode < 48 || ASCIICode > 57))
                return false;
            return true;
        }
    </script>
</div>


<div class="'col-md-4 mx-auto">

    <h3>CURRENT PRODUCT INFO</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Product&nbsp;Code</th>
                <th>Name</th>
                <th>Type</th>
                <th>Aged</th>
                <th>Distillery</th>
                <th>Container</th>
                <th>Price</th>
                <th>Special?</th>
                <th>Status</th>
                <th>Amount available</th>
                <th></th>
            </tr>
        </thead>

        <tbody id="productTable" class="collection with-header">

            {{#each productsResult}}
            <tr>
                <td>{{id_product}}</td>
                <td>{{name_product}}</td>
                <td>{{name_ProductType}}</td>
                <td>{{aged_product}}</td>
                <td>{{name_Distillery}}</td>
                <td>{{description_Container}}</td>
                <td>${{price_product}}</td>
                <td>{{special_product}}</td>
                <td>{{status}}</td>
                <td>{{amount}} units</td>
            </tr>

            {{/each}}

        </tbody>
</div>