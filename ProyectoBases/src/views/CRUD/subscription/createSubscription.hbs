<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Create a subscription
            </div>
            <div class="card-body">
                <form action="/uploadNewSubscriptions" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Subscription name" required>
                    </div>
                    <div class="form-group">
                        <input type="number" min="0" name="price" class="form-control"
                            onkeypress="return onlyNumberKey(event)" aria-describedby="basic-addon2"
                            placeholder="Price (in dollars)" required>
                    </div>
                    <div class="form-group">
                        <input type="number" min="0" name="discount_subscription" class="form-control"
                            onkeypress="return onlyNumberKey(event)" aria-describedby="basic-addon2"
                            placeholder="Discount on purchase total" required>
                    </div>
                    <div class="form-group">
                        <input type="number" min="0" name="discount_shipping" class="form-control"
                            onkeypress="return onlyNumberKey(event)" aria-describedby="basic-addon2"
                            placeholder="Discount on shipping" required>
                    </div>
                    <div class="form-group">
                        <textarea type="text" class="form-control" name="description"
                            placeholder="Subscription description" required></textarea>
                    </div>
                    <h6>Is this subscription able to see special products?</h6>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="specialRadio" id="flexRadioDefault1" value=1 required>
                        <label class="form-check-label" for="flexRadioDefault1">
                            Yes
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="specialRadio" id="flexRadioDefault2" value=0>
                        <label class="form-check-label" for="flexRadioDefault2">
                            No
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary">CREATE</button>
                </form>
            </div>
        </div>
    </div>
    <script>
        function onlyNumberKey(evt) {
            // Only ASCII character in that range allowed
            var ASCIICode = (evt.which) ? evt.which : evt.keyCode
            if (ASCIICode > 31 && (ASCIICode < 48 || ASCIICode > 57))
                return false;
            return true;
        }
    </script>