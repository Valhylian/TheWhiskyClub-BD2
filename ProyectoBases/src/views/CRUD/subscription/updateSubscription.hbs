<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Update a subscription
            </div>
            <div class="card-body">
                <h5>Fill only the inputs of the aspects of the subscription you wish to change.</h5>
                <form action="/uploadUpdateSubscription" method="POST">
                    <input type="hidden" name="selectedSubId" value={{selectedIdSub}}>
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Subscription name" >
                    </div>
                    <div class="form-group">
                        <input type="number" min="0" name="price" class="form-control"
                            onkeypress="return onlyNumberKey(event)" aria-describedby="basic-addon2"
                            placeholder="Price (in dollars)" >
                    </div>
                    <div class="form-group">
                        <input type="number" min="0" name="discount_subscription" class="form-control"
                            onkeypress="return onlyNumberKey(event)" aria-describedby="basic-addon2"
                            placeholder="Discount on purchase total" >
                    </div>
                    <div class="form-group">
                        <input type="number" min="0" name="discount_shipping" class="form-control"
                            onkeypress="return onlyNumberKey(event)" aria-describedby="basic-addon2"
                            placeholder="Discount on shipping" >
                    </div>
                    <div class="form-group">
                        <textarea type="text" class="form-control" name="description"
                            placeholder="Subscription description" ></textarea>
                    </div>
                    <h6>Do you wish to deactivate the subscription? It will no longer be up for purchase</h6>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="activeRadio" id="flexRadioDefault1" value=1>
                        <label class="form-check-label" for="flexRadioDefault1">
                            Activate
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="activeRadio" id="flexRadioDefault2" value=0>
                        <label class="form-check-label" for="flexRadioDefault2">
                            Delete
                        </label>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-primary">Update</button>
                </form>
            </div>
        </div>
    </div>
    <script>
        function onlyNumberKey(evt) {
            // Only ASCII character in that range allowed
            var ASCIICode = (evt.which) ? evt.which : evt.keyCode
            if (ASCIICode > 31 && (ASCIICode < 48 || ASCIICode > 57))
                return false;
            return true;
        }
    </script>
    <div class="'col-md-4 mx-auto">
        <br>
        <h3>CURRENT SUBSCRIPTION INFO</h3>
        <table class="table">
            <br>
            <thead>
                <tr>
                    <th>ID&nbsp;Code</th>
                    <th>Subscription&nbsp;name</th>
                    <th>Description&nbsp;subscription</th>
                    <th>Discount&nbsp;on&nbsp;purchase</th>
                    <th>Price&nbsp;subscription</th>
                    <th>Discount&nbsp;on&nbsp;shipping</th>
                    <th>Active</th>
                </tr>
            </thead>

            <tbody id="productTable" class="collection with-header">

                {{#each subscriptionResult}}
                <tr>
                    <td>{{id_subscription}}</td>
                    <td>{{name_subscription}}</td>
                    <td>{{description_subscription}}</td>
                    <td>%{{discount_subscription}}</td>
                    <td>${{price_subscription}}</td>
                    <td>%{{discount_shipping}}</td>
                    <td>{{active}}</td>
                </tr>
                {{/each}}

            </tbody>
    </div>